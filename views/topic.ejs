<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= topic.title %></title>
    <link rel="stylesheet" href="/styles/styles.css" />
  </head>
  <body>
    <header>
      <nav>
        <a href="/topics">Topics</a>
      </nav>
    </header>
    <main>
      <section id="statement">
        <h1><%= topic.title %></h1>
        <address>Shared by <%= topic.user %>.</address>
        <p><%= topic.statement %></p>
      </section>
      <section id="opinion-form">
        <h2>Share your opinion</h2>
        <form
          action="/share-opinion"
          method="POST"
        >
          <div class="form-control">
            <label for="title">Title</label>
            <input type="text" name="title" id="title" required />
          </div>
          <div class="form-control">
            <label for="user">Your name</label>
            <input type="text" name="user" id="user" required />
          </div>
          <div class="form-control">
            <label for="text">Your opinion</label>
            <textarea id="text" name="text" rows="5" required></textarea>
          </div>
          <input type="hidden" name="topic-id" value="<%= topic.id %>">
          <button>Let the world know it!</button>
        </form>
      </section>
      <section id="opinions">
        <h2>Shared opinions</h2>
        <ul>
          <% for (const opinion of topic.opinions) { %>
          <li>
            <article>
              <h2><%= opinion.title %></h2>
              <address>By <%= opinion.user %>.</address>
              <p><%= opinion.text %></p>
            </article>
          </li>
          <% } %>
        </ul>
      </section>
    </main>
  </body>
</html>
